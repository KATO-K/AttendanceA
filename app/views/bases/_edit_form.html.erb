<%= form_with(model: @base, url: basis_path(@base), local: true) do |f| %>

  <%= f.label :number, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :number, class: "form-control" %>

  <%= f.label :name, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :kind, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :kind, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>